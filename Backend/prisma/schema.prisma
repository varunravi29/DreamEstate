generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  Post      Post[]
}

model Post {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  price      Int
  images     String[]
  address    String
  city       String
  bedroom    Int
  bathroom   Int
  latitude   String
  longitude  String
  type       Type
  property   Property
  createdAt  DateTime    @default(now())
  user       User        @relation(fields: [userId], references: [id])
  userId     String      @db.ObjectId
  postDetail PostDetail?
}

model PostDetail {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  desc       String
  utilities  String
  pet        String
  income     String
  size       Int
  school     Int
  bus        Int
  restaurant Int
  post       Post   @relation(fields: [postId], references: [id])
  postId     String @unique @db.ObjectId
}

enum Type {
  buy
  rent
}

enum Property {
  apartment
  house
  condo
  land
}
